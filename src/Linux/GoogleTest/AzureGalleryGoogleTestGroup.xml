<?xml version="1.0" encoding="utf-8"?>
<TestJobGroup>

  <!-- Resource spec points to an image that is defined in CloudTest policydata.json as a Linux platform image -->
  <ResourceSpec>
    <Resource SKU="Standard_DS4_V2" Image="CTLinuxUbuntu"/>
  </ResourceSpec>

  <Setup TimeoutMins="1">
    <BuildFiles>
      <Copy Src="[BuildRoot]\outputs\build\drop\*" Dest="[WorkingDirectory]\" IsRecursive="true" />
    </BuildFiles>
    <Scripts>
      <Script Path="[WorkingDirectory]\setupscript.sh" />
    </Scripts>
  </Setup>

  <TestJob Name="DCAP.UnitTests" TimeoutMins="3">
    <Execution Type="Exe" Path="[WorkingDirectory]\runtests.sh" Parser="GoogleTest" />
  </TestJob>

  <Cleanup TimeoutMins="1">
    <Scripts>
      <Script Path="[WorkingDirectory]\cleanupscript.sh" Args="/Platform:x64" />
    </Scripts>
  </Cleanup>

</TestJobGroup>